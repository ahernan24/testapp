
	<h1>
		<%= @article.title %>
	</h1>

	<hr>
	
<div id="article-body">
	<div id= 'article_image'>
		<%= image_tag @article.photo.url(:medium)%>
	</div>
		
	
	<p>
		<%= @article.text %>
	</p>
</div>

<div id="fav_button">
	<%= form_for @article, url: article_favorites_path(@article), method: 'post', remote: true do |f| %>
	  <%= f.submit "Add to favorites" %>
	<% end %>
	
</div>



	<h2> Comments </h2>
		<%= render @article.comments %>

		<h2> Add a comment: </h2>
			<%= render 'comments/form' %>
	
	<p>
		<%= link_to 'Back', articles_path %>
		| <%= link_to 'Edit', edit_article_path(@article) %>
  </p>




	
